<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Campground Details</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            name="campground[title]"
            id="title"
            required
          />
        </div>

        <div>
          <label class="form-label" for="price">Price</label>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            name="campground[price]"
            id="price"
            type="number"
            class="form-control"
            aria-label="Price (to the nearest dollar)"
            required
          />
          <span class="input-group-text">.00</span>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            name="campground[description]"
            id="description"
            aria-label="With textarea"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control"
            type="text"
            name="campground[location]"
            id="location"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="images">Image</label>
          <input
            class="form-control"
            type="file"
            name="images"
            id="images"
            multiple
            required
          />
        </div>
      </div>
      <div>
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds/">Cancel</a>
  </div>
</div>
